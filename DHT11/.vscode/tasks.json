{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "West Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "${userHome}/zephyrproject/.venv/bin/west",
            "args": [
                "build",
                "-p",
                "auto",
                "-b",
                "stm32_min_dev_blue"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "West Build F303RE",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "${userHome}/zephyrproject/.venv/bin/west",
            "args": [
                "build",
                "-p",
                "auto",
                "-b",
                "nucleo_f303re"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "West Configurable Build",
            "type": "shell",
            "group": {
                "kind": "build"
            },
            "command": "${userHome}/zephyrproject/.venv/bin/west",
            "args": [
                "build",
                "-p",
                "${input:pristine}",
                "-b",
                "${input:board}"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "West Flash",
            "type": "shell",
            "command": "${userHome}/zephyrproject/.venv/bin/west",
            "args": [
                "flash"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "id": "board",
            "type": "promptString",
            "default": "stm32_min_dev_blue",
            "description": "See https://docs.zephyrproject.org/latest/boards/index.html"
        },
        {
            "id": "pristine",
            "type": "pickString",
            "description": "Choose when to run a pristine build",
            "default": "auto",
            "options": [
                "auto",
                "always",
                "never"
            ]
        }
    ]
}